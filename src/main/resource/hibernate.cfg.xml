<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<!-- Generated by MyEclipse Hibernate Tools. -->
<hibernate-configuration>
<session-factory>
	<!-- 指定数据库方言 -->
	<property name="dialect">
		org.hibernate.dialect.MySQLInnoDBDialect
	</property>
	<!-- 指定数据库所用到的驱动 -->
	<property name="connection.driver_class">
		com.mysql.jdbc.Driver
	</property>
	<!-- 指定数据库链接的url，hibernate链接的数据库名 -->
	<property name="connection.url">
		jdbc:mysql://localhost:3306/db_movie?useUnicode=true&amp;characterEncoding=UTF-8
	</property>
	<!-- 指定连接数据库的用户名 -->
	<property name="connection.username">root</property>
	<property name="connection.password">root</property>

	<property name="myeclipse.connection.profile"></property>
	<property name="hbm2ddl.auto">update</property>


	<!-- 		<property name="myeclipse.connection.profile">mav</property> -->

	<!-- C3P0连接池设定 -->
	<property name="hibernate.connection.provider_class">
		org.hibernate.connection.C3P0ConnectionProvider
	</property>
	<property name="connection.autocommit">true</property>
	<!-- <property name="hibernate.current_session_context_class"> thread </property> -->
	<property name="hibernate.current_session_context_class">
		org.springframework.orm.hibernate4.SpringSessionContext
	</property>

	<property name="cache.provider_class">
		org.hibernate.cache.NoCacheProvider
	</property>
	<!-- 开启二级缓存 -->
	<property name="hibernate.cache.use_second_level_cache">
		false
	</property>
	<!-- 选择二级缓存工具 -->
	<property name="hibernate.cache.provider_class">
		org.hibernate.cache.EhCacheProvider
	</property>
	<!-- 启用查询缓存 -->
	<property name="cache.use_query_cache">false</property>
	<property name="hibernate.c3p0.min_size">8</property>
	<property name="hibernate.c3p0.max_size">200</property>
	<property name="hibernate.c3p0.timeout">3600</property>
	<property name="hibernate.c3p0.max_statements">0</property>
	<property name="hibernate.c3p0.acquire_increment">30</property>
	<property name="hibernate.c3p0.idle_test_period">520</property>
	<property name="hibernate.c3p0.acquire_increment">10</property>
	<property name="hibernate.c3p0.validate">true</property>
	<!-- 自动修改，如果表结构与实体类不一致，那么就修改表使它们一致，数据会保留 -->
	<property name="hbm2ddl.auto">update</property>

	<!-- 使用本地事务jdbc事务，如果是使用全局jta事务，则需要配置为jta -->


	<mapping class="com.javaer.model.User" />
	<mapping class="com.javaer.model.Member" />
	<mapping class="com.javaer.model.Hall" />
	<mapping class="com.javaer.model.Comment" />
	<mapping class="com.javaer.model.Movie" />
	<mapping class="com.javaer.model.Order" />
	<mapping class="com.javaer.model.ShowFilm" />
	<mapping class="com.javaer.model.Attach" />
	<mapping class="com.javaer.model.OrderSeat" />
</session-factory>

</hibernate-configuration>